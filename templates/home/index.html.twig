{% extends 'base.html.twig' %}

{% block title %}MakeZine
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-4">
				<div class="card" style="height: 100%; text">
					<div class="card-body" style="font-family: Press-Feeling-Eroded; font-size:42px">
						<p>1-</p>
						<p>Crée un compte</p>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card" style="height: 100%;">
					<div class="card-body" style="font-family: Press-Feeling-Eroded; font-size:42px">
						<p>2-</p>
						<p>Construis ton Fanzine</p>

					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card" style="height: 100%;">
					<div class="card-body" style="font-family: Press-Feeling-Eroded; font-size:42px">
						<p>3-</p>
						<p>Imprime-le!</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container bg-dark mt-5 mb-5 text-light">
		<h3 style="font-family: Press-Feeling-Eroded; font-size:36px; text-align:center">Les derniers fanzines créés</h3>
        <div class="row" style="padding-bottom: 20px;">
            {% for fanzine in lastZines %}
                <div class="col-md-3 mb-3">
                    <div class="card" style="color: black; height:100%">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title" style="font-family: Press-Feeling-Eroded; font-size:28px; text-align:center"><strong>Titre:</strong> {{fanzine.title}}</h5>
                            </div>
                            <p class="card-text"><strong>Créé le:</strong> {{fanzine.createdAt|date("d/m/Y")}}</p>
                            <p class="card-text"><strong>Résumé:</strong> {{fanzine.abstract}}</p>
                            <p class="card-text"><strong>Auteur:</strong> {{fanzine.user.pseudo}}</p>
                            <a href={{path('home_read', {'id': fanzine.id})}} class="btn btn-dark" style="font-family: Press-Feeling-Eroded; font-size:22px;">LIRE</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
	</div>
    <div class="d-flex flex-column align-center bg-dark mt-5 text-light" style="padding-bottom: 30px;">
		<h3 style="font-family: Press-Feeling-Eroded; font-size:36px; text-align:center">Comment plier son Fanzine?</h3>
        <img src="/img/pliage.jpg" alt="" width="50%" style="margin-left: 25%;">
	</div>
	
{% endblock %}
