{% extends 'base.html.twig' %}

{% block title %}MakeZine App{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Mes fanzines</h1>
    <div class="row">
        <div class="col d-flex flex-wrap justify-content-between">
            {% for fanzine in fanzines %}
            <div class="card mt-2" style="width: 15rem;">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title"><strong>Titre:</strong> {{fanzine.title}}</h5>
                    <p class="card-text"><strong>Créé le:</strong> {{fanzine.createdAt|date("d/m/Y")}}</p>
                    <p class="card-text"><strong>Résumé:</strong> {{fanzine.abstract}}</p>
                    <a href={{path("edit_zine", {id:fanzine.id})}} class="btn btn-primary">Voir</a>
                </div>
            </div>
            {% endfor %}
            <div class="card mt-2" style="width: 15rem;">
                <div class="card-body d-flex flex-column justify-content-center">
                    <a href="#" class="btn btn-success">Créer un nouveau Fanzine</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4 mb-4">
        <div class="col-md-6 border">
            <h3>Fanzine en cours de modification</h1>
                {% if selectedZine is defined %}
                <h5>{{selectedZine.title}}</h5>

                <div id="carouselExampleControls" class="carousel slide carousel-dark" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="fanzine-page">
                                <div class="title-collage">Titre</div>
                                <p class="paragraph">{{selectedZine.title}}</p>
                                <div class="paragraph-collage">Résumé</div>
                                <p class="paragraph">{{selectedZine.abstract}}</p>
                                <div class="paragraph-collage">Date de création</div>
                                <p class="paragraph">{{selectedZine.createdAt|date("d/m/Y")}}</p>
                            </div>
                            <div class="mt-2 mb-2 d-flex justify-content-center">
                                <a href="#" class="btn btn-info">Modifier les infos du Fanzine</a>
                            </div>
                        </div>

                        {% for page in pages %}
                        <div class="carousel-item">
                            <div class="fanzine-page">
                                {% for module in page.modules %}
                                {% if module.collage %}
                                <div class={{module.type ~'-collage'}}>{{module.content}}</div>
                                {% else %}
                                <div class={{module.type}}>{{module.content}}</div>
                                {% endif %}
                                {% endfor %}
                                <div class="d-flex justify-content-end">
                                    page {{page.position}}
                                </div>
                            </div>
                            <div class="mt-2 mb-2 d-flex justify-content-center">
                                <a href="#" class="btn btn-info">Editer cette page</a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                {% else %}
                <p>Aucun fanzine sélectionné</p>
                {% endif %}
        </div>
        <div class="col-md-6 border">
            <h3>Outils d'édition</h3>
            {% if selectedZine is defined %}

            {% else %}
            <p>Sélectionner un fanzine pour accéder aux outils d'édition</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}