{% extends 'base.html.twig' %}

{% block title %}Mot de passe
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="flash-notice">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container mt-4">
		{{form_start(form)}}
        <div class="mt-2">
			{{form_row(form.currentPassword)}}
		</div>
		<div class="mt-2">
			{{form_row(form.plainPassword)}}
		</div>

		<div class="mt-2">
			<button class="btn btn-primary" type="submit" onclick="return confirm('Modifier votre mot de passe?')">Modifier</button>
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
