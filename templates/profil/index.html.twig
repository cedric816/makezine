{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="flash-notice">
			{{ message }}
		</div>
	{% endfor %}

	<div class="container mt-4">
		{{form_start(form)}}
		<div class="mt-2">
			<label for="">Email:</label>
			{{form_row(form.email)}}
		</div>
		<div class="mt-2">
			<label for="">Pseudo:</label>
			{{form_row(form.pseudo)}}
		</div>
		<div class="mt-2">
			<label for="">Mot de passe:</label>
			{{form_row(form.plainPassword)}}
		</div>
		<div class="mt-2">
			<button class="btn btn-primary" type="submit" onclick="return confirm('Modifier vos informations?')">Modifier</button>
		</div>
		{{form_end(form)}}
	</div>
	<div class="container mt-4">
		<a href={{path('profil_password')}} class="btn btn-danger">Modifier mon mot de passe</a>
	</div>
{% endblock %}
